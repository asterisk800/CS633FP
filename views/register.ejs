<!DOCTYPE html>
<html lang="en-us" ng-app="regApp">
<head>
    <% include header_notlogged %>
    <script src="../controllers/registerController.js"></script>
</head>
<body>
<% include nav %>

<div class="container">
    <div class="col-sm-6 col-sm-offset-3">
        <h1><span class="fa fa-sign-in"></span>Register</h1>
        <form class="form-register" method="POST" action="/users/register">
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" placeholder="Email" name="username">
            </div>
            <div ng-controller="regController">
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" placeholder="Password" name="password">
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" class="form-control" placeholder="Password" name="password2">
                </div>
            </div>

            <div class="form-group">
                <label class=" control-label">Gender</label>
                <div class="">
                    <select class="form-control" name="gender">
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                    </select>
                </div>
            </div>



            <div class="form-group">
                <label>City</label>
                <input type="City" class="form-control" placeholder="City" name="city">
            </div>

            <div class="form-group">
                <label>Sate</label>
                <input type="sate" class="form-control" placeholder="state" name="state">
            </div>

            <div class="form-group">
                <label>Birth Date</label>
                <input type="date" class="form-control" placeholder="DOB" name="dob">
            </div>

            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>
<% include footer%>
</body>
</html>